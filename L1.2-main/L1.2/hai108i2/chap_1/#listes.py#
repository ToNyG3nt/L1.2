#exercice 6: meme que l'exercice 2
from math import *
def estPremier(x):
    if x==1 or x==0:
        return False
    if x==2:
        True
    if x%2==0:
        return False
    i=2
    while i<=int(sqrt(x)):
        if x%i==0:
            return False
        i+=1
    return True

def exercice8(liste):
    #affiche les nombre premiers de la liste
    for elem in liste:
        if estPremier(elem):
            print(elem)

def exercice9():
    n=0
    while n<0:
        n=int(input("entrer un nombre entier :"))
        if estPremier(n):
            print(f"{n} est premier")
        if n%2==0:
            print(f"{n} est pair")


def exercice10(n):
    cpt=1
    x=5
    while cpt!=n-1:
        if estPremier(x):
            cpt+=1
            x+=1
        x+=1
    print(f"le {n}eme nombre premier est: {x-2}")



def exercice11(liste,cible):
    for i in range(len(liste)):
        for j in range(i+1,len(liste)):
            if liste[i]+liste[j]==cible:
                return False
    return True

def exercice12_1(d,n):
    res=d
    print("nombre:",res)
    for i in range(n):
        if res%2==0:
            res=res/2
            print("iteration :",i+1)
            print(res)
        else:
            res=(res*3)+1
            print("iteration: ",i+1)
            print(res)
    print(res)

def exercice12_2(d):
    res=d
    cpt=0
    print("nombre:",res)
    while res!=1:
        if res%2==0:
            res=int(res/2)
            print(res)
            cpt+=1
        else:
            res=(res*3)+1
            print(res)
            cpt+=1
    print("nombre d'iteration avant la boucle : ",cpt)
from random import *
def exercice13():
    tas1=int(randint(1,20))
    tas2=int(randint(1,20))
    n=True
    joueur=1
    while n:
        print("Tas 1: ","* "*tas1)
        print("Tas 2: ","*"*tas2)
        if tas1==0 and tas2==0:
            n=False
            print("c'est le joueur ",joueur,"a gagnÃ© !")
            
        
