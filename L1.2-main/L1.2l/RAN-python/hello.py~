#exercice 2

def divavecif(nbre):
    if nbre%5 == 0:
        a=1
    else:
        a=0
    if nbre%7 ==0:
        a+=1
    if a==0 or a== 2:
        return False
    else :
        return True

def divsansif(nbre):
    print(f"{(nbre%5==0 or nbre%7==0) and (not(nbre%5==0 and nbre%7==0)) } voila")


