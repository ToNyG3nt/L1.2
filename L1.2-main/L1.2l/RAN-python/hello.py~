#exercice 4
def codagecesar():
    alfabet = "abcdefghijklmnopqrstuvwxyz"
    indice=int(input("choisisez un indice(entre 0 et 25) :  "))
    print(f"la lettre a coder est l'alfabet {[indice]} !")
    print(f"la lettre est {alfabet[((indice)+3)%26]}")

#exercice 5
def calculette():
    c=int(input("choisisez un nbre : "))
    d=int(input("choisisez un nbre : "))
    ope=(input("choisisez un operateur : "))
    if ope=="+":
        return c+d
    elif ope == "-":
        return c-d
    elif ope == "*" or ope == "x":
        return c*d
    elif ope == "/":
        return c/d
    else :
        return "pas bon mon reuf"

#exercice 7
def sommet(liste):
    a=0
    for e in liste:
        a+=e
    return a
def sommepair(liste):
    a=0
    for e in liste:
        if e%2 == 0:
            a+=e
    return a

print(sommet([5,8,4,2,6,9,2])
print(sommepair([
    [5,8,4,2,6,9,2])
